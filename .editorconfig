# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.{py}]
indent_size = 4

[*.{go}]
indent_style = tab

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2
