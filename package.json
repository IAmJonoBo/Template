{
  "name": "template-repository",
  "version": "0.1.0",
  "description": "A multipurpose template repository with best practices built-in",
  "keywords": [
    "template",
    "boilerplate",
    "starter",
    "typescript",
    "best-practices",
    "documentation"
  ],
  "homepage": "https://github.com/IAmJonoBo/Template#readme",
  "bugs": {
    "url": "https://github.com/IAmJonoBo/Template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IAmJonoBo/Template.git"
  },
  "license": "MIT",
  "author": "Template Contributors",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:hooks && npm run verify",
    "setup:hooks": "husky install || echo 'Husky not installed yet'",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run build",
    "dev": "echo 'Add your dev server command here'",
    "build": "tsc",
    "clean": "rimraf dist coverage .turbo",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "prepush": "npm run lint && npm run typecheck && npm run test",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.11",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,yml,yaml}": [
      "prettier --write"
    ]
  }
}
